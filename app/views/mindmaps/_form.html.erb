<%= form_for [@user, @mindmap] do |f| %>
   <% if @mindmap.errors.any? %>
       <div id="error_explanation">
         <h2><%= pluralize(@mindmap.errors.count, "error") %>
           prohibited this mindmap from being saved:</h2>
         <ul>
           <% @mindmap.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
           <% end %>

         </ul>
       </div>
   <% end %>
   <p>
     <%= f.label :title %><br>
     <%= f.text_field :title %>
   </p>
   
   <%= f.submit %>
<% end %>

